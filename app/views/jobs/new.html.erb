
<div class="col-md-8 col-centered">
  <div class="panel panel-zdy">
      <div class="panel-heading">Add a job</div>
      <div class="panel-body">
          <%= simple_form_for @job do |f| %>

          <%= f.input :title %>
          <%= f.input :description %>
          <%= f.input :wage_lower_bound, :label => "薪资下限" %>
          <%= f.input :wage_upper_bound, :label => "薪资上限" %>
          <%= f.input :contact_email %>
          <%= f.input :is_hidden %>

          <%= f.submit "Sumbmit", class:'btn btn-zdy' %>

          <%= link_to '返回', jobs_path, class: 'btn btn-zdy' %>

          <% end %>
        </div>
    </div>
</div>
