
            <div class="container">
              <div class="col-sm-8 col-md-12 col-lg-12 ">
              <blockquote class="quote-box">
                <p class="quotation-mark">
                <h1>热门职位</h1>
                <div class="pull-right">
                  <%= link_to("Add a job", new_job_path, :class => "btn btn-default" ) %>
                </div>

                <br><br>
                </p>
                <p class="quote-text">
                  <table class="table table-boldered ">

                    <thead>
                      <tr>
                        <td>职缺</td>
                        <td>薪资下限</td>
                        <td>薪资上限</td>
                        <td>发布时间</td>
                      </tr>
                    </thead>
                    <tbody>
                      <% @jobs.each do |job| %>
                      <tr>
                        <td>
                          <%= link_to(job.title, job_path(job)) %>
                        </td>
                        <td>
                          <%= job.wage_lower_bound %>
                        </td>
                        <td>
                          <%= job.wage_upper_bound %>
                        </td>
                        <td>
                          <%= job.created_at %>
                        </td>

                      </tr>
                      <% end %>
                    </tbody>
                  </table>                </p>
                <hr>
                <div class="blog-post-actions">
                  <p class="blog-post-bottom pull-left">

                    <div class="nav navbar-nav navbar-left">
                         <%= form_tag search_jobs_path , :method => :get  do %>
                         <div class="input-group" id="search-id" >
                           <input type="text" class="form-control" name="q" value="<%= params[:q] %>" placeholder="请输入职位信息">
                           <div class="input-group-btn">
                             <button class="btn btn-default" type="submit">
                               <i class="glyphicon glyphicon-search"></i>
                             </button>
                           </div>
                         </div>
                         <% end %>
                       </div>

                  </p>

                </div>
              </blockquote>
    </div>
</div>


<div class="text-center">
    <%= will_paginate @jobs, renderer: BootstrapPagination::Rails %>
  </div>
</div>
